{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vacancy</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vacancy.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ vacancy.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ vacancy.description }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ vacancy.salary }}</td>
            </tr>
            <tr>
                <th>Isremote</th>
                <td>{% if vacancy.isRemote %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ vacancy.category }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vacancy_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('vacancy_edit', { 'id': vacancy.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
